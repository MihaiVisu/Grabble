<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_user_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_user_name"
                android:text="@string/user_name_tag"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272"/>

        </RelativeLayout>

        <include layout="@layout/item_divider"/>

        <!--Gems and Tokens section-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_tokens"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_tokens"
                android:text="@string/tokens_tag"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_gems"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_gems"
                android:text="@string/gems_tag"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272"/>

        </RelativeLayout>

        <include layout="@layout/item_divider"/>

        <!--Statistics section-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_distance"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_distance"
                android:text="@string/distance_traveled_tag"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/profile_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_score"
                android:text="@string/score_tag"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/profile_los_boosters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_los_boosters"
                android:text="@string/los_boosters_tag"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/profile_word_helpers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_word_helpers"
                android:text="@string/word_helpers_tag"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272"/>
        </RelativeLayout>

        <include layout="@layout/item_divider"/>

        <Button
            android:text="@string/show_my_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_my_achievements"/>

        <Button
            android:text="@string/show_letters_gathered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_letters_gathered" />

        <Button
            android:text="@string/create_new_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_words" />

        <Button
            android:text="@string/buy_more_boosters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy_boosters" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>